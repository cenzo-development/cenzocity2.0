  <div>

        <div class="accountbg"></div>

        <div class="wrapper-page account-page-full">

            <div class="card">
                <div class="card-block">
                    <div class="account-box">

                        <div class="card-box p-5">
                            <h2 class="text-uppercase text-center pb-4">
                              <span><%= image_tag "cenzo.png", alt: "", height: "80" %></span>
                            </h2>

                            <%= form_with url: sessions_path do |form| %>
                            <div class="form-group m-b-20 row">
                              <div class="col-12">
                                  <%= form.label :email %>
                                  <%= form.email_field :email, id: :user_email, class: "form-control", placeholder: "Enter your email" %>
                              </div>
                            </div>

                            <div class="form-group m-b-20 row">
                              <div class="col-12">
                                  <%= form.label :password %>
                                  <%= form.password_field :password, id: :user_password, class: "form-control", placeholder: "Enter your password" %>
                              </div>
                            </div>

                            <div class="form-group row text-center m-t-10">
                              <div class="col-12">
                                <%= button_tag "Login", class: "btn btn-block btn-custom waves-effect waves-light" %>
                              </div>
                            </div>
                              <%end%>
                            <div class="m-t-40 text-center">
